<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundgradient"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".listLayout">

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TableRow>
                <TextView
                    android:id="@+id/viewitembarcodename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Barcode"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/viewitembarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/viewitemnamename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/viewitemname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/viewitempricename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Quantity"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/viewitemcategoryname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Category"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewitemcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/labelItemYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Year"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewItemYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Textview"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/labelItemOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Origin"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewItemOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Textview"
                    android:textColor="#ffff" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/labelItemStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Status"
                    android:textColor="#EFCB5D"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/viewItemStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Textview"
                    android:textColor="#ffff" />
            </TableRow>
        </TableLayout>


        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="delete" />

    </RelativeLayout>
</android.support.v7.widget.CardView>